<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="child row">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
      <div class="topic-text">
        <p class="left"><strong>詳細</strong></p>
        <p class="left"><%= @topic.content %></p>
        <p class="right">
          <strong>作成時間:</strong>
          <%= @topic.created_at.strftime('%Y年%m月%d日 %H:%M') %>
        </p>
      </div>
      <div class="comments-wrapper">
        <p>コメント一覧</p>
        <div id="comments_area">
          <%= render partial: 'comments/index', locals: { comments: @comments, topic: @topic } %>
        </div>
        <%= render partial: 'comments/form', locals: { comment: @comment, topic: @topic } %>
        <p>
          <% if current_user.id == @topic.user_id %>
              <%= link_to '編集', edit_topic_path(@topic) %> |
          <% end %>
          <%= link_to '戻る', topics_path %>
        </p>
      </div>
    </div>
  </div>
</div>