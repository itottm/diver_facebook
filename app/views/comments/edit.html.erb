<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <h2>コメントを編集する</h2>
    <%= form_for([@topic, @comment]) do |f| %>
        <%= f.error_messages! %>

        <div>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>